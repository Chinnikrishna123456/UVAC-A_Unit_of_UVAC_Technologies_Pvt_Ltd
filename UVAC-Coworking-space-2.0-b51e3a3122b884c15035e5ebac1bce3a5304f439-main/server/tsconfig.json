{
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "../",
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2018"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@middleware/*": ["middleware/*"]
    },
    "types": ["node"]
  },
  "include": ["../server/**/*", "../shared/**/*",  "../vite.config.ts"],
  "exclude": ["../node_modules", "../dist"]
}
