{
  "files": [],
  "references": [
    { "path": "./client" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["shared/**/*", "server/**/*", "api/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "noEmit": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",

    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],

    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"]
    }
  }
}