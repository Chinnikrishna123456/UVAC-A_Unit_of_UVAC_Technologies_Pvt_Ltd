{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,

    // âœ… Enable top-level await support
    "target": "ES2017",              // ðŸ‘ˆ Add this
    "module": "ESNext",              // Already correct

    // âœ… Type safety and module features
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,

    // âœ… Modern module resolution
    "moduleResolution": "bundler",   // Works well with Vite
    "baseUrl": ".",
    "types": ["node", "vite/client"],

    // âœ… Path aliases
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
